<!doctype html>
<html id="tienda">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>
  <link rel="stylesheet" href="css/header.css">
  <style>
    
  </style>
  <title>Proyecto</title>
</head>
<body class="respuesta">

    <% if (UsuarioValido) { %>

        <%- include('partials/logeado') %>
        
    <% } else { %>

        <%- include('partials/headers') %>
        
    <% } %>

    <div class="swiper">

        <div class="swiper-wrapper">

            <div class="swiper-slide">          
              <% IMG.forEach(function(app){ %>
                <div style="background-image: url('<%= app.img1 %>');width: 100%;height: 100%;background-repeat: no-repeat;background-size: cover;background-position: center;"></div>
              <% }) %>
            </div>
            <div class="swiper-slide">
                <% IMG2.forEach(function(app){ %>
                    <div style="background-image: url('<%= app.img2 %>');width: 100%;height: 100%;background-repeat: no-repeat;background-size: cover;background-position: center;"></div>
                <% }) %>
            </div>
            <div class="swiper-slide">
                <% IMG3.forEach(function(app){ %>
                    <div style="background-image: url('<%= app.img3 %>');width: 100%;height: 100%;background-repeat: no-repeat;background-size: cover;background-position: center;"></div>
                <% }) %>
            </div>
    
        </div>

        <div class="swiper-pagination"></div>
    
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    
    </div>

    <main id="producto">
       
        <section class="bg-gradient-to-r from-cyan-400 to-blue-500 p-6">
            <h2 class="text-2xl text-white max-md:text-xl font-semibold max-md:text-center">
                Software
            </h2>
        </section>
        
       <div class="grid justify-items-center items-center py-10">
            <% if (software.length == 0) { %>

                <%- include('partials/404') %>
    
            <% } else { %>
    
                <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 justify-items-center items-center my-8 gap-7">
                    
                    <% software.forEach(function(app){ %>
    
                        <div class="bg-white shadow-lg p-6 md:hover:scale-110 animacion max-md:flex gap-5 max-md:w-full rounded-md border border-slate-400 padre">
                            <div>
                                <img src="<%= app.url %>" style="width: 200px; height: 300px;" class="rounded" name="imagen">
                            </div>
                            <div class="max-sm:w-3/5">
                                <section class="p-2">
                                    <h3 class="text-center text-xl uppercase" name="nombre">
                                        <%= app.producto %>
                                    </h3>
                                </section>
                                   <div class="p-2 grid justify-items-center">
                                    <div class="flex">
                                        <p class="text-lg text-center text-green-600" id="precio" name="precio">
                                            <%= app.precio %>  
                                        </p>
                                        <span class="text-lg text-center text-green-600">
                                            $
                                        </span>
                                    </div>
                                  </div>
                                    <div class="mb-2">
                                        <a href="/producto/<%= app._id %>" class="flex justify-center bg-blue-500 hover:bg-blue-400 p-2 rounded-md animacion">
                                            <div class="flex gap-1">
                                                <span class="text-white">Comprar</span>
                                            </div>
                                        </a>
                                    </div>
                                    <div>
                                        <button class="flex justify-center bg-cyan-500 hover:bg-cyan-400 p-2 rounded-md animacion w-full carrito" data-id="<%= app._id %>">
                                            <div class="flex gap-1 items-center">
                                                <span class="text-white">Agregar</span>
                                                <span class="text-white">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                                                    </svg>
                                                </span>
                                            </div>
                                        </button>
                                    </div>
                            </div>
                        </div>
                    
                    <% }) %>
                
                </div>
    
            <% } %>
       </div>

       <section class="bg-gradient-to-r from-cyan-400 to-blue-500 p-6">
        <h2 class="text-2xl text-white max-md:text-xl font-semibold max-md:text-center">
            Servicios Digitales
        </h2>
       </section>

        <div class="grid justify-items-center items-center py-10">
            
            <% if (servicios.length == 0) { %>

                <%- include('partials/404') %>
     
            <% } else { %>
     
                <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 justify-items-center items-center my-8 gap-7">
                    
                    <% servicios.forEach(function(digital){ %>
       
                    
                        <div class="bg-white shadow-lg p-6 md:hover:scale-110 animacion max-md:flex gap-5 max-md:w-full rounded-md border border-slate-400 padre">
                            <div>
                                <img src="<%= digital.url %>" style="width: 200px; height: 300px;" class="rounded" name="imagen">
                            </div>
                            <div class="max-sm:w-3/5">
                                <section class="p-2">
                                    <h3 class="text-center text-xl uppercase" name="nombre">
                                        <%= digital.producto %>
                                    </h3>
                                </section>
                                   <div class="p-2 grid justify-items-center">
                                    <div class="flex">
                                        <p class="text-lg text-center text-green-600" id="precio" name="precio">
                                            <%= digital.precio %>  
                                        </p>
                                        <span class="text-lg text-center text-green-600">
                                            $
                                        </span>
                                    </div>
                                  </div>
                                    <div class="mb-2">
                                        <a href="/producto/<%= digital._id %>" class="flex justify-center bg-blue-500 hover:bg-blue-400 p-2 rounded-md animacion">
                                            <div class="flex gap-1">
                                                <span class="text-white">Comprar</span>
                                            </div>
                                        </a>
                                    </div>
                                    <div>
                                        <button class="flex justify-center bg-cyan-500 hover:bg-cyan-400 p-2 rounded-md animacion w-full carrito" data-id="<%= digital._id %>">
                                            <div class="flex gap-1 items-center">
                                                <span class="text-white">Agregar</span>
                                                <span class="text-white">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                                                    </svg>
                                                </span>
                                            </div>
                                        </button>
                                    </div>
                            </div>
                        </div>
                     
                    <% }) %>
                
                </div>
     
            <% } %>
        </div>

        <section class="bg-gradient-to-r from-cyan-400 to-blue-500 p-6">
            <h2 class="text-2xl text-white max-md:text-xl font-semibold max-md:text-center">
                Gift cards
            </h2>
        </section>

        <div class="grid justify-items-center items-center py-10">
           
            <% if (tarjetas.length == 0) { %>

                <%- include('partials/404') %>
     
            <% } else { %>
     
                <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 justify-items-center items-center my-8 gap-7">
                    
                    <% tarjetas.forEach(function(card){ %>
     
                         <div class="bg-white shadow-lg p-6 md:hover:scale-110 animacion max-md:flex gap-5 max-md:w-full rounded-md border border-slate-400 padre">
                              <div>
                                  <img src="<%= card.url %>" style="width: 200px; height: 300px;" class="rounded" name="imagen">
                              </div>
                              <div class="max-sm:w-3/5">
                                  <section class="p-2">
                                      <h3 class="text-center text-xl uppercase" name="nombre">
                                          <%= card.producto %>
                                      </h3>
                                  </section>
                                  <div class="p-2 grid justify-items-center">
                                    <div class="flex">
                                        <p class="text-lg text-center text-green-600" id="precio" name="precio">
                                            <%= card.precio %>  
                                        </p>
                                        <span class="text-lg text-center text-green-600">
                                            $
                                        </span>
                                    </div>
                                  </div>
                                  <div class="mb-2">
                                    <a href="/producto/<%= card._id %>" class="flex justify-center bg-blue-500 hover:bg-blue-400 p-2 rounded-md animacion">
                                        <div class="flex gap-1">
                                            <span class="text-white">Comprar</span>
                                        </div>
                                    </a>
                                </div>
                                <div>
                                    <button class="flex justify-center bg-cyan-500 hover:bg-cyan-400 p-2 rounded-md animacion w-full carrito" data-id="<%= card._id %>">
                                        <div class="flex gap-1 items-center">
                                            <span class="text-white">Agregar</span>
                                            <span class="text-white">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                                                </svg>
                                            </span>
                                        </div>
                                    </button>
                                </div>
                              </div>
                         </div>
                     
                    <% }) %>
                
                </div>
     
            <% } %>
        </div>

        <section class="bg-gradient-to-r from-cyan-400 to-blue-500 p-6">
            <h2 class="text-2xl text-white max-md:text-xl font-semibold max-md:text-center">
                Juegos
            </h2>
        </section>

        <div class="grid justify-items-center items-center py-10">
            
            <% if (juegos.length == 0) { %>

                <%- include('partials/404') %>
     
             <% } else { %>
     
                 <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 justify-items-center items-center my-8 gap-7">
                    
                     <% juegos.forEach(function(game){ %>
     
                         <div class="bg-white shadow-lg p-6 md:hover:scale-110 animacion max-md:flex gap-5 max-md:w-full rounded-md border border-slate-400 padre">
                              <div>
                                  <img src="<%= game.url %>" style="width: 200px; height: 300px;" class="rounded" name="imagen">
                              </div>
                              <div class="max-sm:w-3/5">
                                  <section class="p-2">
                                      <h3 class="text-center text-xl uppercase" name="nombre">
                                          <%= game.producto %>
                                      </h3>
                                  </section>
                                  <div class="p-2 grid justify-items-center">
                                    <div class="flex">
                                        <p class="text-lg text-center text-green-600" id="precio" name="precio">
                                            <%= game.precio %>  
                                        </p>
                                        <span class="text-lg text-center text-green-600">
                                            $
                                        </span>
                                    </div>
                                  </div>
                                  <div class="mb-2">
                                    <a href="/producto/<%= game._id %>" class="flex justify-center bg-blue-500 hover:bg-blue-400 p-2 rounded-md animacion">
                                        <div class="flex gap-1">
                                            <span class="text-white">Comprar</span>
                                        </div>
                                    </a>
                                </div>
                                <div>
                                    <button class="flex justify-center bg-cyan-500 hover:bg-cyan-400 p-2 rounded-md animacion w-full carrito" data-id="<%= game._id %>">
                                        <div class="flex gap-1 items-center">
                                            <span class="text-white">Agregar</span>
                                            <span class="text-white">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                                                </svg>
                                            </span>
                                        </div>
                                    </button>
                                </div>
                              </div>
                         </div>
                     
                     <% }) %>
                
                 </div>
     
             <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>
    
 <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
 <script src="js/menu.js"></script>
 <script src="js/swiper.js"></script>
 <script src="js/saveCart.js"></script>
</body>
</html>