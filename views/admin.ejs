<!doctype html>
<html id="tienda">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/admin.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Admin panel</title>
</head>
<body>
   <section class="bg-gradient-to-r from-cyan-400 to-blue-500 shadow-md">
      <h1 class="text-center p-6 md:text-xl text-md text-white font-semibold">
         !!Bienvenido administrador âœŒðŸŽ‰!!
      </h1>
   </section>

   <%- include('partials/menuAdmin') %>

   <div class="flex max-md:flex-col-reverse justify-evenly items-center w-full p-12">

      <div class="md:flex justify-center">
         <form action="/admin" method="POST" class="bg-white hover:shadow-xl my-8 p-5 rounded-lg border-2 animacion border-gray-300">

            <div class="flex items-center justify-center gap-3 p-3">
            
               <div>
                  <h3 class="text-center font-semibold">
                     Â¿AÃ±adir al inicio?
                  </h3> 
               </div>
               <div>
                  <input type="checkbox" name="favoritos" value="Si" class="p-2">
               </div>
      
            </div>

            <div class="md:flex items-center">

               <div>
                  <div class="p-2">
                     <h3 class="text-center font-semibold">
                        Nombre
                     </h3>
                  </div>
   
                  <div class="flex justify-center">
                     <input type="text" class=" border-b-2 border-stone-300 linea-none w-10/12 p-2" placeholder="Indique nombre..." name="producto">
                  </div>
               </div>
   
               <div>
                  <div class="p-2">
                     <h3 class="text-center font-semibold">
                        Precio
                     </h3>
                  </div>
                  
                  <div class="flex justify-center">
                     <input type="number" min="1" class=" border-b-2 border-stone-300 linea-none w-10/12 p-2" placeholder="Indique precio..." name="precio">
                  </div>
               </div>

            </div>

            <div>
               <div class="p-2">
                  <h3 class="text-center font-semibold">
                     imagen
                  </h3>
               </div>
               
               <div class="flex justify-center">
                  <input type="text" class=" border-b-2 border-stone-300 linea-none w-10/12 p-2" placeholder="Url de la imagen..." name="url">
               </div>
            </div>

            <div>
               <div class="p-2">
                  <h3 class="text-center font-semibold">
                     Tipo de licencia
                  </h3>
               </div>
               
               <div  class="flex justify-center">
                  <Select class="p-3 rounded-md fondo bg-stone-100 shadow-md w-10/12" name="licencia">
                     <option value="Software">Software</option>
                     <option value="Servicios">Servicios</option>
                     <option value="Tarjetas">Tarjetas</option>
                     <option value="Juegos">Juegos</option>
                  </Select>
               </div>
            </div>

            <div class="mt-5">
               <div class="p-2">
                  <h3 class="text-center font-semibold">
                     Descripcion
                  </h3>
               </div>
               
               <div class="flex justify-center">
                  <textarea name="descripcion" class=" border-2 border-stone-300 linea-none w-10/12 rounded" style="height: 150px;"></textarea>
               </div>
            </div>

            <div class="flex justify-center my-4">
               <div>
                  <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-md animacion font-semibold">
                     Crear producto
                  </button>
               </div>
            </div>
         </form>
      </div>

      <section class="shadow-md w-screen p-5 md:hidden bg-white">
         <h3 class="text-center text-lg text-blue-500">
            Crear producto
         </h3>
      </section>

      <div class="p-5">
         <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
         <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_UW8DlCRljO.json"  background="transparent"  speed="1" loop  autoplay class="animated"></lottie-player>
      </div>

   </div>
</body>
